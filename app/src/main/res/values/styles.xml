<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Menu" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>
    <style name="bottom_nav" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>

    <style name="ButtonBorder" parent="Widget.AppCompat.Button.Colored"/>

    <style name="ButtonBorder.Primary">
        <item name="android:background" >@color/creditCardBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
