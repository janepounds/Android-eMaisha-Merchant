<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/josefin_sans"
                android:text="@string/expense_name"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />


            <EditText
                    android:id="@+id/etxt_expense_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/expense_amount"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />




                <EditText
                    android:id="@+id/etxt_expense_amount"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/expense_date"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />


                <EditText
                    android:id="@+id/etxt_date"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="date"
                    android:padding="8dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/expense_time"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />

                <EditText
                    android:id="@+id/etxt_time"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="number|time"
                    android:padding="8dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/expense_note_if_any"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />


                <EditText
                    android:id="@+id/etxt_expense_note"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_corner"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="textMultiLine"
                    android:paddingStart="8dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>


            <TextView
                android:id="@+id/txt_add_expense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/balance_cards"
                android:fontFamily="@font/josefin_sans"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/add_expense"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>