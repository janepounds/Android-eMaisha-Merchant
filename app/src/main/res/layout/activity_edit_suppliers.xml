<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/supplier_name"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />



            <EditText
                android:id="@+id/etxt_supplier_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_corner"
                android:fontFamily="@font/josefin_sans"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/creditCardBackground"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/supplier_contact_person"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/etxt_supplier_contact_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_corner"
                android:fontFamily="@font/josefin_sans"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/creditCardBackground"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/supplier_cell"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:weightSum="12">



                <EditText
                    android:id="@+id/etxt_area_code"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="10"
                    android:background="@drawable/edittext_corner"
                    android:fontFamily="@font/josefin_sans"
                    android:hint="@string/area_code"
                    android:textColorHint="@color/textColorSecondaryLight"
                    android:inputType="number"
                    android:padding="8dp"
                    android:textColor="#000"
                    android:textSize="18sp"/>





                <EditText
                    android:id="@+id/etxt_supplier_cell"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext_corner"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="number"
                    android:maxLength="9"
                    android:padding="8dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/supplier_email"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />



            <EditText
                android:id="@+id/etxt_supplier_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_corner"
                android:fontFamily="@font/josefin_sans"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/creditCardBackground"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/supplier_address"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />



            <EditText
                android:id="@+id/etxt_supplier_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_corner"
                android:fontFamily="@font/josefin_sans"
                android:hint="@string/supplier_address_one"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/creditCardBackground"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>



            <EditText
                android:id="@+id/etxt_supplier_address_two"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_corner"
                android:fontFamily="@font/josefin_sans"
                android:hint="@string/supplier_address_two"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/creditCardBackground"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/supplier_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="TODO"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/profile_icon"
                    tools:ignore="NestedWeights" />
                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="top"
                    app:srcCompat="@drawable/ic_close"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_sans"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:text="imagename.png"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/txt_choose_supplier_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/balance_cards"
                    android:fontFamily="@font/josefin_sans"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Upload photo"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_edit_suppliers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/balance_cards"
                android:fontFamily="@font/josefin_sans"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/edit"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_update_suppliers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/balance_cards"
                android:fontFamily="@font/josefin_sans"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/update_information"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>