<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".product.AddProductFragment"
     android:background="@drawable/dialog_background">
    <LinearLayout
        android:id="@+id/layout_add_money"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@drawable/top_rounded_blue">

        <TextView
            android:id="@+id/agent_bal_inquiry_title_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:gravity="center"
            android:text="Confirm Deposit Details"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans"
                        android:layout_marginBottom="5dp"
                        android:text="Manufacturer"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />



                    <EditText
                        android:id="@+id/etxt_product_manufucturer"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:drawableRight="@drawable/drop_down"
                        android:fontFamily="@font/josefin_sans"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/creditCardBackground"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans"
                        android:layout_marginBottom="5dp"
                        android:text="Category"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etxt_product_category"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:drawableRight="@drawable/drop_down"
                        android:fontFamily="@font/josefin_sans"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/creditCardBackground"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans"
                        android:layout_marginBottom="5dp"
                        android:text="Name"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/etxt_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:drawableRight="@drawable/drop_down"
                        android:fontFamily="@font/josefin_sans"
                        android:inputType="text"
                        android:textSize="18sp"
                        android:padding="10dp"
                        android:textColor="@color/creditCardBackground"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans"
                        android:layout_marginBottom="5dp"
                        android:text="@string/product_code"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/edittext_corner"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginBottom="10dp">



                        <EditText
                            android:id="@+id/etxt_product_code"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_weight="2"
                            android:fontFamily="@font/josefin_sans"
                            android:inputType="text"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/creditCardBackground" />



                        <ImageView
                            android:id="@+id/img_scan_code"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="8"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/new_barcode" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Units"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/etxt_product_units"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:drawableRight="@drawable/drop_down"
                        android:fontFamily="@font/josefin_sans"
                        android:inputType="text"
                        android:textSize="18sp"
                        android:padding="10dp"
                        android:textColor="@color/creditCardBackground"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans"
                        android:layout_marginBottom="5dp"
                        android:text="Selling price"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/ugx_background"
                            android:fontFamily="@font/josefin_sans"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="UGX"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etxt_product_sell_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@color/transparent"
                            android:fontFamily="@font/josefin_sans"
                            android:inputType="text"
                            android:padding="8dp"
                            android:textColor="#000"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/txt_selling_units"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/edittext_right_corners_green"
                            android:fontFamily="@font/josefin_sans"
                            android:gravity="center"
                            android:text="/ unit"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans"
                        android:layout_marginBottom="5dp"
                        android:text="Purchase Price"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/ugx_background"
                            android:fontFamily="@font/josefin_sans"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="UGX"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etxt_buy_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@color/transparent"
                            android:fontFamily="@font/josefin_sans"
                            android:inputType="text"
                            android:padding="8dp"
                            android:textColor="#000"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/txt_purchase_units"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/edittext_right_corners_green"
                            android:fontFamily="@font/josefin_sans"
                            android:gravity="center"
                            android:text="/ unit"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans"
                        android:layout_marginBottom="5dp"
                        android:text="In-Stock"
                        android:textColor="@color/textColorSecondaryLight"
                        android:textSize="16sp" />



                    <EditText
                        android:id="@+id/etxt_product_stock"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_corner"
                        android:fontFamily="@font/josefin_sans"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/creditCardBackground"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/image_view_holder"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="visible"
                android:background="@drawable/edittext_corner">



                <ImageView
                    android:id="@+id/produce_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    app:srcCompat="@drawable/image_placeholder"
                    tools:ignore="VectorDrawableCompat" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/select_supplier"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etxt_supplier"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_corner"
                android:drawableRight="@drawable/drop_down"
                android:fontFamily="@font/josefin_sans"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/creditCardBackground"
                android:textSize="18sp"
                android:visibility="gone"/>



            <TextView
                android:id="@+id/txt_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/balance_cards"
                android:fontFamily="@font/josefin_sans"
                android:gravity="center"
                android:padding="13dp"
                android:text="@string/add_product"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="true"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>