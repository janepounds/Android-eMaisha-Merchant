<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="Product Manufucturer"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />



                <EditText
                    android:id="@+id/etxt_product_manufucturer"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:drawableRight="@drawable/drop_down"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/product_category"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />

                <EditText
                    android:id="@+id/etxt_product_category"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:drawableRight="@drawable/drop_down"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/product_name"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />


                <EditText
                    android:id="@+id/etxt_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:drawableRight="@drawable/drop_down"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="text"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textColor="@color/creditCardBackground"
                    android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/product_code"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginBottom="10dp">



                    <EditText
                        android:id="@+id/etxt_product_code"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="2"
                        android:background="@drawable/edittext_corner"
                        android:fontFamily="@font/josefin_sans"
                        android:inputType="text"
                        android:textSize="18sp"
                        android:padding="10dp"
                        android:textColor="@color/creditCardBackground" />



                <ImageView
                    android:id="@+id/img_scan_code"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="8"
                    app:srcCompat="@drawable/new_barcode" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/unit_product_buy_price"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />

                <EditText
                    android:id="@+id/etxt_buy_price"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/unit_product_sell_price"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />



                <EditText
                    android:id="@+id/etxt_product_sell_price"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/product_stock"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />



                <EditText
                    android:id="@+id/etxt_product_stock"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginBottom="5dp"
                android:text="@string/select_supplier"
                android:textColor="@color/textColorSecondaryLight"
                android:textSize="16sp" />

                <EditText
                    android:id="@+id/etxt_supplier"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_corner"
                    android:drawableRight="@drawable/drop_down"
                    android:fontFamily="@font/josefin_sans"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/creditCardBackground"
                    android:textSize="18sp" />



            <TextView
                android:id="@+id/txt_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/balance_cards"
                android:fontFamily="@font/josefin_sans"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/add_product"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>